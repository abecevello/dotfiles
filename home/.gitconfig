[user]
	name = Adam Becevello
	email = adam@becevello.ca
[color]
	ui = auto
[fetch]
	prune = true
[push]
	default = upstream
[pull]
	rebase = true
[rebase]
	autostash = true
	autosquash = true
[diff]
  colorMoved = zebra

[includeIf "gitdir:~/src/github.com/Shopify/"]
  path = ~/.shopify.gitconfig
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
