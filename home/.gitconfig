[user]
	name = Adam Becevello
	email = adam@becevello.ca
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
[push]
	default = current
[pull]
	default = current
[diff]
	algorithm = patience
[protocol]
	version = 2
[credential]
	helper = osxkeychain

[includeIf "gitdir:~/src/github.com/Shopify/"]
    path = ~/.shopify.gitconfig
[core]
	commitGraph = true
[gc]
	writeCommitGraph = true
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
