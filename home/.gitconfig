[alias]
	cleanup = !sh ~/.delete_local_merged_branches.sh
[user]
	name = Adam Becevello
	email = adam@becevello.ca
[color]
	ui = auto
[fetch]
	prune = true
[push]
	default = upstream
[pull]
	rebase = true
[rebase]
	autostash = true
	autosquash = true
[diff]
  colorMoved = zebra
  algorithm = patience
[core]
	commitGraph = true
[gc]
	writeCommitGraph = true
[protocol]
	version = 2

[includeIf "gitdir/i:src/github.com/Shopify/"]
  path = ~/.shopify.gitconfig
[url "https://github.com/Shopify/"]
	insteadOf = git@github.com:Shopify/
	insteadOf = git@github.com:shopify/
	insteadOf = ssh://git@github.com/Shopify/
	insteadOf = ssh://git@github.com/shopify/
[init]
	defaultBranch = main
